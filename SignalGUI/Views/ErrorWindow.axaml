<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SignalGUI.Views.ErrorWindow"
        Title="Error"
        Width="400"
        Height="200"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  
  <Grid RowDefinitions="Auto,*,Auto" Margin="10">
    <TextBlock Grid.Row="0" 
               Text="An error occurred:" 
               FontWeight="Bold" 
               Margin="0,0,0,10"/>
    
    <Border Grid.Row="1" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="3" 
            Margin="0,0,0,10">
      <ScrollViewer>
        <TextBlock x:Name="ErrorMessageTextBlock" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top"/>
      </ScrollViewer>
    </Border>
    
    <Button Grid.Row="2" 
            x:Name="OkButton" 
            Content="OK" 
            Width="80" 
            Height="30" 
            HorizontalAlignment="Right"/>
  </Grid>
</Window>